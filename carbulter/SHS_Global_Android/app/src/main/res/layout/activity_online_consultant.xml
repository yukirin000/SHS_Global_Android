<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar"></include>
    <TextView
        android:paddingLeft="@dimen/activity_horizontal_pading"
        android:paddingRight="@dimen/activity_horizontal_pading"
        android:id="@+id/advisory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="      会员可以在线免费咨询，随时随地咨询您的爱车在使用过程中所碰到的任何问题，我们将由专家团队为您耐心解答，时时刻刻站在您的角度，并为您提出合理的建议，让您省时、省钱、更省心！
"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/call_telephone"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/round_call_button"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_image"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/telephone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="呼叫管家"
            android:textColor="@color/main_gold"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
