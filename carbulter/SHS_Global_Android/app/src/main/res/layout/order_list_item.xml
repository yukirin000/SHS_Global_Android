<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingRight="@dimen/activity_horizontal_pading"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="@dimen/activity_horizontal_pading">
        <com.shs.global.ui.view.RoundImageView
            android:id="@+id/shop_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pictures_no" />
        <TextView
            android:id="@+id/shop_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/shop_image"
            android:gravity="center_vertical"
            android:text="XXXXX店"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/is_use"
            android:layout_alignParentRight="true"
            android:text="可以使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pay_money"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="50元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_date"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
