                <!--android:background="@drawable/round_resend_button"-->
                <!--android:gravity="center"-->
                <!--android:textColor="#ff0000"-->
                <!--android:text="重新提交"-->
                <!--android:id="@+id/car_resubmit"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->
        <!--</RelativeLayout>-->
    </LinearLayout>
</LinearLayout>
