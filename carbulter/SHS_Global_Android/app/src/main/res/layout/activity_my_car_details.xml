<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <include layout="@layout/layout_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_pading"
        android:paddingRight="@dimen/activity_horizontal_pading">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/main_black" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/phone_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="电话"
                android:textColor="@color/main_black" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/text_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_car_num"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/car_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="车牌"
                android:textColor="@color/main_black" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/text_car_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_car_type"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/car_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="车型"
                android:textColor="@color/main_black" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/text_car_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                /> />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/travel_root"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/travel_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="行驶证"
                android:textColor="@color/main_black" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/driving_license"
                android:layout_width="46dp"
                android:layout_height="46dp" />
            <ImageView
                android:id="@+id/dividing_image"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:textColorHint="@color/main_hint_gary" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/car_state_root"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:textColor="#ff0000"
                android:text="正在审核"
                android:id="@+id/car_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
